page {
	width: 100%;
	height: 100%;
}
.img-box {
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2); 
	line-height: 140rpx;
	text-align: center;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 300rpx;
	margin: auto;
  justify-content: center;
}
.img-box image {
	width: 140rpx;
	height: 140rpx;
	line-height: 140rpx;
	text-align: center;
	border-radius: 70rpx;
}
.text-box {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	margin: auto;
}
.text-box button {
	width: 400rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	display: block;
	font-size: 32rpx;
	color: #333;
}
.journey-container{
    position:absolute;
    left: 80px;
    top: 0px;
    margin-top: 200rpx;
    background-color: rgba(145, 126, 218, 0.856);  
    border: 1px solid rgba(255, 254, 189, 0.856);
    width: 200rpx;
    height: 80rpx;
    border-radius: 5px;
    text-align:center;
    justify-content: center;
}

.journey{
    font-size:30rpx;
    font-weight: bold;
    line-height:80rpx;
    color:rgba(255, 254, 189, 0.856);
}
.motto{
    margin-top:100rpx;
    font-size:50rpx;
    font-weight: bold;
    color:rgba(226, 19, 19, 0.514);
    font-family: KaiTi;
}
.timu{
    position:absolute;
    justify-content: center;
    top: 100px;
    color: rgb(193, 17, 228);
    font-size:80rpx;
    font-family: FangSong;  
}

